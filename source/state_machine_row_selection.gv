  edge [ fontsize = 14];

  s0 [label="s0" color = green, fontcolor = green,];
  s1 [label="s1"];
  s2 [label="s2"];
  s3 [label="s3"];
  s4 [label="s4"];
  s5 [label="s5"];
  s6 [label="s6"];


  s0 -> s0 [label = "E0, E3, E5, E7, E9"];
  s0 -> s1 [label = "C1"];
